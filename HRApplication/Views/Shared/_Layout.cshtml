<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRApplication</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-reboot.css" />
    <link rel="stylesheet" href="~/lib/datepicker/datepicker.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="~/lib/jquery-ui-1.12.1.custom/jquery-ui.css" />
    @*<link rel="stylesheet" href="~/lib/jquery-ui-1.12.1.custom/jquery-ui.structure.min.css" />*@
    @*<link rel="stylesheet" href="~/lib/jquery-ui-1.12.1.custom/jquery-ui.theme.min.css" />*@

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Api" asp-action="LogIn" class="navbar-brand">HRApplication</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("HR"))
                    {
                        <li><a asp-area="" asp-controller="JobOffer" asp-action="Index">Moje oferty pracy</a></li>
                        <li><a asp-area="" asp-controller="HR" asp-action="Index">HR</a></li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-area="" asp-controller="AdminPanel" asp-action="Index">Panel administratora</a></li>
                        <li><a asp-area="" asp-controller="AdminPanel" asp-action="ChangeRole">Zmień Role</a></li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("User"))
                    {
                        <li><a asp-area="" asp-controller="Application" asp-action="Index">Oferty pracy</a></li>
                    }
                    <partial class="ml-5" name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - HRApplication</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
