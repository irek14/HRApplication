@model HRApplication.BusinessLogic.Models.JobOffer.DetailsJobOfferViewModel

@{
    ViewData["Title"] = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Title)</label>
            <div class="col-sm-8">
                <input class="form-control" readonly="" placeholder="@Model.Title" />
            </div>
        </div>
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Description)</label>
            <div class="col-sm-8">
                <textarea readonly="" placeholder="@Model.Description" class="form-control"></textarea>
            </div>
        </div>
        <hr />
        @if (Model.Salary != null)
        {
            <div class="form-group row text-right required">
                <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Salary)</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly="" placeholder="@Model.Salary" />
                </div>
            </div>
            <hr />
        }
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.ContractType)</label>
            <div class="col-sm-8">
                <input class="form-control" readonly="" placeholder="@Model.ContractType" />
            </div>
        </div>
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.PartTimeWork)</label>
            <div class="col-sm-8">
                @if (Model.PartTimeWork)
                {
                    <input class="form-control" readonly="" placeholder="Tak" />
                }
                else
                {
                    <input class="form-control" readonly="" placeholder="Nie" />
                }
            </div>
        </div>
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.HoursPerWeek)</label>
            <div class="col-sm-8">
                <input class="form-control" readonly="" placeholder="@Model.HoursPerWeek" />
            </div>
        </div>
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Position)</label>
            <div class="col-sm-8">
                <input class="form-control" readonly="" placeholder="@Model.Position" />
            </div>
        </div>
        <hr />
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.EndDate)</label>
            <div class="col-sm-8">
                <input class="form-control" readonly="" placeholder="@Model.EndDate" />
            </div>
        </div>
        <div class="form-group row text-right required">
            <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.IsArchived)</label>
            <div class="col-sm-8">
                @if (Model.IsArchived)
                {
                    <input class="form-control" readonly="" placeholder="Tak" />
                }
                else
                {
                    <input class="form-control" readonly="" placeholder="Nie" />
                }
            </div>
        </div>
        <div class="col-12 row">
            <a asp-action="Index" asp-controller="JobOffer" class="btn btn-success">Powrót</a>
        </div>
    </div>
</div>
